<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/text_white">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".activities.Register">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.05" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.95" />

        <ImageView
            android:id="@+id/registerBackBtn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="24dp"
            app:layout_constraintEnd_toStartOf="@+id/imageView3"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/guideline3"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/back_icon"
            tools:ignore="VectorDrawableCompat" />

        <TextView
            android:id="@+id/registerView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="64dp"
            android:fontFamily="@font/archivo_black"
            android:text="Create Account"
            android:textColor="@color/text_black"
            android:textSize="22sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.095"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/registerBackBtn" />

        <EditText
            android:id="@+id/first_name"
            android:layout_width="360dp"
            android:layout_height="42dp"
            android:layout_marginTop="80dp"
            android:background="@drawable/input_field"
            android:drawableStart="@drawable/profile"
            android:drawablePadding="12dp"
            android:ems="10"
            android:fontFamily="@font/archivo"
            android:hint="First Name"
            android:inputType="textPersonName"
            android:text=""
            android:textColor="@color/text_black"
            android:textColorHint="@color/text_gray"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.49"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/registerView" />

        <EditText
            android:id="@+id/surname"
            android:layout_width="360dp"
            android:layout_height="42dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/input_field"
            android:ems="10"
            android:fontFamily="@font/archivo"
            android:hint="Last Name"
            android:inputType="textPersonName"
            android:text=""
            android:textColor="@color/text_black"
            android:textColorHint="@color/text_gray"
            android:textSize="18sp"
            android:drawableStart="@drawable/profile"
            android:drawablePadding="12dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.495"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/first_name" />

        <EditText
            android:id="@+id/register_email"
            android:layout_width="360dp"
            android:layout_height="42dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/input_field"
            android:ems="10"
            android:fontFamily="@font/archivo"
            android:hint="Email Address"
            android:inputType="textEmailAddress"
            android:text=""
            android:textColor="@color/text_black"
            android:textColorHint="@color/text_gray"
            android:textSize="18sp"
            android:drawableStart="@drawable/email"
            android:drawablePadding="12dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.495"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/surname" />

        <EditText
            android:id="@+id/register_password"
            android:layout_width="360dp"
            android:layout_height="42dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/input_field"
            android:ems="10"
            android:fontFamily="@font/archivo"
            android:hint="Create Password"
            android:inputType="textPassword"
            android:text=""
            android:textColor="@color/text_black"
            android:textColorHint="@color/text_gray"
            android:textSize="18sp"
            android:drawableStart="@drawable/lock"
            android:drawablePadding="12dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.495"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/register_email" />

        <EditText
            android:id="@+id/retype_password"
            android:layout_width="360dp"
            android:layout_height="42dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/input_field"
            android:ems="10"
            android:fontFamily="@font/archivo"
            android:hint="Retype Password"
            android:inputType="textPassword"
            android:textSize="18sp"
            android:drawableStart="@drawable/lock"
            android:drawablePadding="12dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/register_password" />

        <Button
            android:id="@+id/registerBtn"
            android:layout_width="370dp"
            android:layout_height="60dp"
            android:layout_marginTop="42dp"
            android:fontFamily="@font/montserrat_bold"
            android:letterSpacing="0.05"
            android:text="Create Account"
            android:textAllCaps="false"
            android:textColor="@color/text_white"
            android:textSize="18sp"
            app:backgroundTint="#46369F"
            app:cornerRadius="24dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.609"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/retype_password" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="0dp"
            app:layout_constraintEnd_toStartOf="@+id/guideline10"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/logo" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>